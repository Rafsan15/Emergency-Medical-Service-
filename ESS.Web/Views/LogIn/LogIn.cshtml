
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_LandingPageLayoutPage.cshtml";

}
<br/>
<head>
    <title></title>
    <script src="~/Scripts/Angular JS/Angular.js"></script>
    <link href="~/Content/Flatly.css" rel="stylesheet" />
    <script src="~/Scripts/Angular JS/FromValidation.js"></script>
</head>
<body ng-app="validationmodule" ng-controller="FormController">
    <div class="container">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="row">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h1 style="font-size: 30px" class="panel-title" align="center">Log In </h1>
                    </div>
                    @using (Html.BeginForm("LogIn", "LogIn", FormMethod.Post, new { name = "signupform" }))
                    {
                        <div class="panel-body">

                            <div class="form-group">
                                <label for="EmailId" class="col-lg-3 control-label"></label>
                                <div class="col-lg-9">
                                    <input type="email" name="Email" class="form-control" id="EmailId" placeholder="Email"
                                           ng-model="user.Email"
                                           ng-required="true">
                                    <p class="field-validation-error" ng-show="signupform.Email.$invalid && signupform.Email.$touched " style="color: red">Enter your correct Email</p>


                                </div>
                            </div>

                            <div class="form-group">

                                <label for="PasswordId" class="col-lg-3 control-label"></label>
                                <div class="col-lg-9">
                                    <input type="password" name="Password" class="form-control" id="PasswordId" placeholder="Password"
                                           ng-model="user.Password"
                                           ng-required="true"
                                           ng-minlength="6">
                                    <p class="field-validation-error" ng-show="signupform.Password.$invalid && signupform.Password.$touched " style="color: red">Password should atleast 6 characters long</p>


                                </div>
                            </div>

                            <div class="form-group">
                                <br />
                                <label for="PasswordId" class="col-lg-3 control-label"></label>

                                <div class="col-lg-7">
                                    <br />
                                    <button type="submit" class="btn btn-success btn-lg btn-block">Log In</button>
                                    <button type="submit" class="btn btn-danger btn-lg btn-block">Cancel</button>

                                </div>
                                <label for="PasswordId" class="col-lg-2 control-label"></label>

                            </div>

                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="col-lg-3"></div>

    </div>
</body> 