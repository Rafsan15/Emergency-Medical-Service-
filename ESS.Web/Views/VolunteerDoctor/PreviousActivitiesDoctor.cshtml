@model List<ESS.Core.Entity.RequestForService>

@{
    Layout = "~/Views/Shared/_VolunteerDoctorLayoutPage.cshtml";

    ViewBag.Title = "PreviousActivities";
}

<head>
    <title></title>
    <link href="~/Content/Flatly.css" rel="stylesheet" />
</head>
<body>
    <h1> My Previous Activities </h1>
    <br />
    <br />


    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Location</th>
                <th>Phone</th>
                <th>Request Time</th>
                <th>Description</th>
                <th>Finish Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.ToArray())
            {
                <tr class="info">
                    <td>@p.RequestId</td>
                    <td>@p.Name</td>
                    <td>@p.Location</td>
                    <td>@p.Phone</td>
                    <td>@p.RequesTime</td>
                    <td>@p.Description</td>
                    <td>@p.FinishTime</td>
                </tr>
            }



        </tbody>
    </table>
</body>
