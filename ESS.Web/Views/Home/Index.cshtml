@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LandingPageLayoutPage.cshtml";

}
@if (ViewBag.count == 1)
{
    <br/>
    <br/>
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Well done!</strong> Your request is send   <a href="#" class="alert-link">successfully</a>.
    </div>
}
<head>
    <link href="~/Content/Flatly.css" rel="stylesheet" />
    <link href="~/Content/landingStyle.css" rel="stylesheet" />
</head>

<div class="jumbotron">
    <h1 class="lead">Welcome to emergency medical service system !! </h1>
    <h1 class="lead">smart,fast and reliable</h1>
    <p class="text-center h2 text-danger">Send Emergency Request Now</p>
    <p>
        <a href="@Url.Action("AddRequest", "Request")" class="btn btn-success btn-lg btn-block" value="Finish">
            Request Now
        </a>
    </p>
</div>
@* Employee Info Section *@
<section class="container" style="margin-top: 40px;">
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Mr. Akif</h3>
                </div>
                <div class="panel-body">

                    <img src="~/Content/Images/friendlyGuy1.jpg" width="330" height="170" />

                    <p class="h4">“What is the essence of life? To serve others and to do good.”</p>
                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Mr. Jamil</h3>
                </div>
                <div class="panel-body">

                    <img src="~/Content/Images/friendlyGuy2.jpg" width="330" height="170" />

                    <p class="h4">“Service to others is the rent you pay for your room here on Earth.”</p>
                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Mr. Taqui</h3>
                </div>
                <div class="panel-body">

                    <img src="~/Content/Images/friendlyGuy3.jpg" width="330" height="170" />

                    <p class="h4">“The best way to find yourself is to lose yourself in the service of others.” </p>
                </div>
            </div>

        </div>

    </div>
</section>

<!-- About section -->
